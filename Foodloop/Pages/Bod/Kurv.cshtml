@page
@model Foodloop.Pages.Kunde.KurvModel
@{
    ViewData["Title"] = "Min Kurv";
}

<div class="container mt-5" style="max-width: 700px;">
    <h2 class="mb-4 text-center">Min Kurv</h2>

    @if (!Model.Kurv.Any())
    {
        <div class="alert alert-info">Din kurv er tom.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Ret</th>
                <th>Antal</th>
                <th>Pris pr. stk</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Kurv)
            {
                <tr>
                    <td>@item.Navn</td>
                    <td>@item.Antal</td>
                    <td>@item.Pris kr</td>
                    <td>@(item.Pris * item.Antal) kr</td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <th colspan="3" class="text-end">Samlet pris:</th>
                <th>@Model.TotalPris kr</th>
            </tr>
            </tfoot>
        </table>

        <form method="post" asp-page-handler="Bestil">
            <button type="submit" class="btn btn-success w-100">Gennemf√∏r bestilling</button>
        </form>
    }
</div>
@page
@model Foodloop.Pages.PrivacyModel
@{
ViewData["Title"] = "Festivalens Madboder";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Kort over Festivalens Madboder</h1>

    <!-- Her kommer selve kortet -->
    <div id="map" style="height: 500px; border-radius: 10px;"></div>
</div>

<!-- Modal til menukort -->
<div class="modal fade" id="menuModal" tabindex="-1" aria-labelledby="menuModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="menuModalLabel">Menukort</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Luk"></button>
            </div>
            <div class="modal-body" id="menuContent">
                <!-- Dynamisk indhold -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Initier kortet
    var map = L.map('map').setView([55.6171, 12.0796], 15);

    // Tilføj OpenStreetMap tiles
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    // Hent boder fra Razor Model
    var boder = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Boder ?? new List<Bod>()));

    console.log("Boder fra server:", boder); // Debug i browser console

    // Tilføj markører til kortet
    boder.forEach(function (bod) {
        var popupContent = `
            <b>${bod.Navn}</b><br/>
            Madtype: ${bod.MadType}<br/>
            <button class="btn btn-sm btn-primary mt-2" onclick="openMenu('${bod.Navn}')">
                Se menukort
            </button>
        `;

        L.marker([bod.Latitude, bod.Longitude])
            .addTo(map)
            .bindPopup(popupContent);
    });

    // Funktion til at åbne menukort i modal
    function openMenu(navn) {
        var menuHtml = `
            <p>Her er menukortet for <b>${navn}</b>:</p>
            <ul>
                <li>Ret 1 - 50 kr</li>
                <li>Ret 2 - 75 kr</li>
                <li>Ret 3 - 100 kr</li>
            </ul>
 `;
        document.getElementById("menuContent").innerHTML = menuHtml;
        var modal = new bootstrap.Modal(document.getElementById('menuModal'));
        modal.show();
    }
</script>
} 